<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<div class="form-container">
  <form action="./personalinfo/" method="post">

    <div class="form-group">
    
      <input type="hidden" id="account_id" name="account_id"
        value="<%= typeof accountData.account_id !== 'undefined' ? accountData.account_id : '' %>" />
    </div>

    <div class="form-group">
      <label for="account_firstname">First Name</label>
      <input type="text" id="account_firstname" name="account_firstname" minlength="2" maxlength="50" pattern="[A-Za-z0-9\s\-]{2,50}"
        value="<%= typeof accountData.account_firstname !== 'undefined' ? accountData.account_firstname : '' %>" />
    </div>

    <div class="form-group">
      <label for="account_lastname">Last Name</label>
      <input type="text" id="account_lastname" name="account_lastname"
        value="<%= typeof accountData.account_lastname !== 'undefined' ? accountData.account_lastname : '' %>" />
    </div>

    <div class="form-group">
      <label for="account_email">Email</label>
      <input type="email" id="account_email" name="account_email"
        value="<%= typeof accountData.account_email !== 'undefined' ? accountData.account_email : '' %>" />
    </div>

    <div class="form-group">
        <label for="account_password">Password</label>
        <input type="password" id="account_password" name="account_password"
        value="<%= typeof accountData.account_password !== 'undefined' ? accountData.account_password : '' %>" /> 
    </div>
    <input type="submit" value="Update User Information" />
  </form>
</div>