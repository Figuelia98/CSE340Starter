<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<div class="classification-container">
  <form action="./addclassification" method="post">
    <div class="form-group">
      <label for="classification_name">New classification name</label>
      <input
        type="text"
        id="classification_name"
        name="classification_name"
        required
        minlength="3"
        maxlength="30"
        pattern="^[A-Za-z\-]{3,30}$"
        title="3â€“30 characters, letters or hyphens only. No spaces allowed."
        value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
      />
    </div>
    <input type="submit" value="Add classification" />
  </form>
</div>